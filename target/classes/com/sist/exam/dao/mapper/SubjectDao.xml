  	<update id="update">
  		UPDATE TODO SET SUCCESS ='DONE', SUCCDAY=SYSDATE WHERE SEQ =#{seq}
  	</update>
  	
  	<delete id="delete">
  		DELETE FROM TODO WHERE SEQ = #{seq}
  	</delete> -->
</mapper>